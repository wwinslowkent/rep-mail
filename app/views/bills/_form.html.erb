<div class="large-6 small-6 columns dark">

<%= form_for [@bill] do |f| %>

  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.label :location %>
    <%= f.text_area :location %>
  </div>

  <div>
    <%= f.submit(value="Submit") %>
  </div>

<% end %>
</div>
